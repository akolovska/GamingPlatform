@model IEnumerable<GamingPlatform.Domain.Models.DTO.LibraryDTO>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>My Library</h1>
<table class="table">
	<thead>
	<tr>
		<th>Game</th>
		<th>Date Added</th>
		<th>Play Time (Hours)</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach(var item in Model)
	{
		<tr>
			<td>@item.GameName</td>
			<td>@item.DateAdded</td>
			<td>@item.PlayTimeHours</td>
			
		<td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
		<td><a asp-action="Details" asp-route-id="@item.Id">Details</a> |</td>
		</tr>
	}
	</tbody>
</table>
